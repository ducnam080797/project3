<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <%= link_to "Homestay", "#", class: "navbar-brand" %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to t(".home"), "#", class: "nav-link" %>           
          </li>
          <li class="nav-item">
            <%= link_to t(".list"), "#", class: "nav-link" %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="dropdown">
              <%= link_to t(".account"), "#", class: "dropdown-toggle nav-link", data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu mt-2">
                <%= link_to t(".profile"), "#", class: "dropdown-item" %>
                <%= link_to t(".settings"), "#", class: "dropdown-item" %>
                <%= link_to t(".add_story"), "#", class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to t(".log_out"), "#", method: :delete, class: "dropdown-item" %>
              </ul>
            </li>
          <% else %>
            <li class="nav-item navbar-right">
              <%= link_to t(".sign_up"), "#", class: "nav-link" %>
            </li>
            <li class="nav-item navbar-right">
              <%= link_to t(".sign_in"), "#", class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
</header>
